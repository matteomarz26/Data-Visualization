<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bar Graph Visualization</title>
</head>
<body>
    <canvas id="myCanvas" width="500" height="400"></canvas>
    <script>
        class BarGraph {
            constructor(data, x = 0, y = 0, width = 400, height = 300) {
                this.data = data; // Data array
                this.x = x;
                this.y = y;
                this.width = width;
                this.height = height;
                this.barWidth = this.width / data.length - 10; // Adds spacing between bars
            }

            draw(context) {
                context.clearRect(0, 0, context.canvas.width, context.canvas.height); // Clear canvas
                context.fillStyle = "black";
                context.fillRect(this.x, this.y, this.width, this.height); // Background

                const maxData = Math.max(...this.data); // Find max value for scaling

                this.data.forEach((value, index) => {
                    let barHeight = (value / maxData) * this.height; // Scale bars
                    let barX = this.x + index * (this.barWidth + 10); // Add spacing
                    let barY = this.y + (this.height - barHeight);

                    context.fillStyle = "blue";
                    context.fillRect(barX, barY, this.barWidth, barHeight); // Draw bars
                });
            }
        }

        // Get canvas context
        const canvas = document.getElementById("myCanvas");
        const ctx = canvas.getContext("2d");

        // Sample data
        const data = [10, 30, 50, 40, 60, 80, 100];

        // Create and draw graph
        const graph = new BarGraph(data, 50, 50, 400, 300);
        graph.draw(ctx);
    </script>
</body>
</html>
